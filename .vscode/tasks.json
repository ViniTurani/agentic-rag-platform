{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compose-up api",
      "type": "shell",
      "isBackground": true,
      "command": "docker compose -f ./docker-compose.yaml --env-file environments/.env up --build --remove-orphans api-debug --watch",
      "problemMatcher": {
        "owner": "compose",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Waiting for client to attach|Uvicorn running on|Application startup complete"
        }
      },

      "runOptions": { "reevaluateOnRerun": true }
    }
